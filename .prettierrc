{
  "trailingComma": "none",
  "tabWidth": 4,
  "printWidth": 120,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { 
          "bracketSameLine": true,
          "parser": "lwc" 
        }
    },
    {
        "files": "*.{cmp,page,component}",
        "options": { "parser": "html" }
    },
    {
        "files": "**/lwc/**/*.js",
        "options": { 
            "singleQuote": true,
            "semi": true 
        }
    }
  ]
}
