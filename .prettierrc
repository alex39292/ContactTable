{
  "trailingComma": "none",
  "tabWidth": 4,
  "printWidth": 120,
  "bracketSameLine": true,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
        "files": "*.{cmp,page,component}",
        "options": { "parser": "html" }
    },
    {
        "files": "**/lwc/**/*.js",
        "options": { "singleQuote": true }
    }
  ]
}
